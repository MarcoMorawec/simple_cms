<div class="container">

	<%= link_to("<<back to section list", {:action => 'list'}, :class => 'back_link') %>

	<!-- flash message goes here -->
	<!-- end of flash message goes here -->


		<div class="span10">
			<h2>Show Section Details</h2>

			<div class="well">

				<div class = "row">
					<div class = "span3">
						<strong>Name</strong>
					</div>
					<div class = "span5">
						<%= @section.name %>
					</div>
				</div>

				<div class = "row">
					<div class = "span3">
						<strong>Position</strong>
					</div>
					<div class = "span5">
						<%= @section.position %>
					</div>
				</div>

				<div class = "row">
					<div class = "span3">
						<strong>Visible</strong>
					</div>
					<div class = "span5">
						<%= @section.visible ? 'True' : 'False' %>
					</div>
				</div>

				<div class = "row">
					<div class = "span3">
						<strong>Created</strong>
					</div>
					<div class = "span5">
						<%= @section.created_at %>
					</div>
				</div>

				<div class = "row">
					<div class = "span3">
						<strong>Updated</strong>
					</div>
					<div class = "span5">
						<%= @section.updated_at %>
					</div>
				</div>

				<div class = "row">
					<div class = "span3">
						<strong>Content Type</strong>
					</div>
					<div class = "span5">
						<%= @section.content_type %>
					</div>
				</div>		

				<div class = "row">
					<div class = "span3">
						<strong>Content</strong>
					</div>
					<div class = "span5">
						<%= @section.content %>
					</div>
				</div>		
			</div>
		</div>
	</div>
</div>