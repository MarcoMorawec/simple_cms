<% @page_title = "Subjects Edit" %>

<div class = "container">
	<div class="span5 well">
		<h2>Edit a the Subject</h2>

		<!-- Creating the form -->

		<%= form_for(:subject, :url => {:action => 'update', :id => @subject.id}, :html => {:class => 'form-horizontal'}) do |f| %>

		
		<%= render(:partial => 'subject_form', :locals => {:f => f}) %>
	
		<%= submit_tag("Update Subject") %>

		<% end %>
		<%= link_to("<< Back to List", {:action => 'list'}, :class => "back_link") %>
	</div>

</div>