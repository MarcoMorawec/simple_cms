<div class = "container">
	<div class="span5 well">
		<h2>Edit a the Subject</h2>

		<!-- Creating the form -->

		<%= form_for(:subject, :url => {:action => 'update', :id => @subject.id}) do |f| %>
			<%= f.label :name, "Subject Name" %>
			<%= f.text_field(:name) %>

			<%= f.label :name, "Subject Position" %>
			<%= f.text_field(:position) %>

			<%= f.label :name, "Subject Visible" %>
			<%= f.text_field(:visible) %>

			<%= submit_tag("Update Subject") %>


		<% end %>
		<%= link_to("<< Back to List", {:action => 'list'}, :class => "back_link") %>
	</div>

</div>