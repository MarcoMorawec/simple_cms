<% @page_title = "Subjects List" %>

<div class="container">
	<h1>Welcome to the Subject list page</h1>

	<% if !flash[:notice].blank? %>
		<div class="alert">
			<%= flash[:notice] %>
		</div>
	<% end %>

	<div class="row">
		<div class="span4">
			<h5>Subject  Visible  Pages</h5>
		</div>
	</div>
	<% @subjects.each do |subject| %>
	<div class="row">
		<div class="span4">
				<%= subject.name %>
				<%= subject.position %>
				<%= subject.visible ? 'Yes' : 'No' %>
				<%= subject.pages.size %>
		</div>
		<div class="span4">
			<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action_show') %>
			<%= link_to("Edit", {:action =>'edit', :id => subject.id}, :class => 'action_edit' ) %>
			<%= link_to("Delete", {:action => 'destroy', :id => subject.id}, :class => 'action_delete', confirm: 'Are you sure you want to delete this?') %>
		</div>
	</div>
	<% end %>
<%= link_to("Add new Subject", {:action => 'new'}, :class => 'action_create') %>

</div>